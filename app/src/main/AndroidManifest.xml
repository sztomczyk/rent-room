<?xml version="1.0" encoding="utf-8"?>
<manifest package="com.hotel.hotelroomreservation"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="com.hotel.hotelroomreservation.App"
        android:allowBackup="true"
        android:configChanges="orientation"
        android:icon="@mipmap/ic_app"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.hotel.hotelroomreservation.activities.AppWelcomeActivity"
            android:theme="@style/LauncherTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="com.hotel.hotelroomreservation.activities.MainActivity"/>
        <activity android:name="com.hotel.hotelroomreservation.activities.AboutAppActivity"/>
        <activity android:name="com.hotel.hotelroomreservation.activities.RoomActivity"/>
        <activity
            android:name="com.hotel.hotelroomreservation.activities.PhotoGalleryActivity"
            android:configChanges="orientation|screenSize"/>
        <activity android:name="com.hotel.hotelroomreservation.activities.AboutHotelActivity">
        </activity>
    </application>

</manifest>